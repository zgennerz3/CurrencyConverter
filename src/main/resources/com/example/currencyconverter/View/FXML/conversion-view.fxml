<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="50.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.currencyconverter.Controller.ConversionController">
    <Label text="Currency Converter" />
    <!--  Input fields to specify which currencies to convert  -->
    <HBox alignment="CENTER" spacing="8.0">
        <TextField fx:id="CurrencyFrom" promptText="From" />
        <ImageView fitHeight="50" fitWidth="50">
            <Image url="@../Images/ConversionArrow.png"/>
        </ImageView>
        <!-- Button to initiate the currency conversion -->
        <TextField fx:id="CurrencyTo" promptText="To" />
        <Button onAction="#OnConvertButtonClick" text="Go" />
    </HBox>
    <HBox alignment="CENTER" spacing="8.0">
        <!--  Input field to specify the amount of currency to convert  -->
        <TextField fx:id="AmountOfCurrency" promptText="Enter amount to convert" />
    </HBox>
    <Label fx:id="ResultsText"/>
    <Label fx:id="ConvertedCurrencyValue"/>
</VBox>
